// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  // Use Vercel Postgres envs directly (no manual mapping needed)
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

generator client {
  provider = "prisma-client-js"
}

// MVP: Keep Job independent of NextAuth users.
// We'll link to users later if/when you enable the Prisma adapter.
model Job {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  location    String
  rate        String?
  description String

  status      JobStatus @default(OPEN)
  postedAt    DateTime  @default(now())

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum JobStatus {
  OPEN
  FILLED
  CLOSED
}
